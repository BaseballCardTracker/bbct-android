<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="bbct.android"
          android:versionCode="7"
          android:versionName="@string/version_number"
>
    <uses-sdk android:targetSdkVersion="17"
              android:minSdkVersion="7"
    />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <permission android:name="@string/read_permission"
                android:label="@string/permission_label"
                android:description="@string/permission_desc"
                android:protectionLevel="signature"
    />
    <application android:label="@string/app_name"
                 android:icon="@drawable/baseball"
    >
        <activity android:name=".lite.activity.BaseballCardList"
                  android:label="@string/app_name"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="bbct.android.common.activity.BaseballCardDetails">
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="vnd.android.cursor.item/baseball_card" />
            </intent-filter>
        </activity>
        <activity android:name="bbct.android.common.activity.FilterOptions"/>
        <activity android:name="bbct.android.common.activity.filter.YearFilter"/>
        <activity android:name="bbct.android.common.activity.filter.NumberFilter"/>
        <activity android:name="bbct.android.common.activity.filter.YearAndNumberFilter"/>
        <activity android:name="bbct.android.common.activity.filter.PlayerNameFilter"/>
        <activity android:name="bbct.android.common.activity.filter.TeamFilter"/>
        <activity android:name="bbct.android.common.activity.About" />
        <provider android:name="bbct.android.common.provider.BaseballCardProvider"
                  android:label="@string/provider_name"
                  android:authorities="@string/authorities"
                  android:readPermission="@string/read_permission"
        />
        <activity android:name="com.google.ads.AdActivity"
                  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
        />
    </application>
</manifest>
